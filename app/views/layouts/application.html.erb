<!DOCTYPE html>
<html>
<head>
  <title>Agent 00Santa</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <h1>Agent 00Santa</h1>
    <% if logged_in? %>
      <%= link_to "Log out", logout_path, method: :delete %> | <%= link_to current_user.name, current_user %>
    <% else %>
      <%= link_to "Log in", login_path %> | <%= link_to "Register", new_user_path %>
    <% end %>
  </header>

<%= yield %>

</body>
</html>
